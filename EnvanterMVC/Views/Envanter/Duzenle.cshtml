@model EnvanterMVC.Entities.Model.User
@{
    ViewBag.Title = "Düzenle";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Envanter Takip | Düzenle </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        .form-control, .form-select {
            width: 100% !important;
            min-width: 350px;
            max-width: 100%;
            height: 45px;
            border-radius: 8px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            padding: 10px;
        }

            .form-select:focus, .form-control:focus {
                border-color: #28a745;
                box-shadow: 0px 0px 10px rgba(40, 167, 69, 0.5);
            }

        .text-danger {
            margin-top: 5px; /* Validation mesajı  */
        }
    </style>
</head>
<body>
    <h2>Veri Düzenle</h2>
    <div>
        @using (Html.BeginForm("Duzenle", "Envanter", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.Tur)
                </div>
                <div>
                    @Html.DropDownListFor(x => x.Tur, new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Notebook", Value = "Notebook" },
                                    new SelectListItem { Text = "Masaüstü", Value = "Masaüstü" },
                                    new SelectListItem { Text = "Monitör", Value = "Monitör" },
                                    new SelectListItem { Text = "Telefon", Value = "Telefon" },
                                    new SelectListItem { Text = "Tablet", Value = "Tablet" }
                                }, "-- Tür Seçiniz --", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.Marka)
                </div>
                <div>
                    @Html.DropDownListFor(x => x.Marka, new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "HP", Value = "HP" },
                                    new SelectListItem { Text = "Lenovo", Value = "Lenovo" },
                                    new SelectListItem { Text = "Dell", Value = "Dell" },
                                    new SelectListItem { Text = "Asus", Value = "Asus" },
                                    new SelectListItem { Text = "Apple", Value = "Apple" },
                                    new SelectListItem { Text = "Samsung", Value = "Samsung" }
                                }, "-- Marka Seçiniz --", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">

                <div>
                    @Html.LabelFor(x => x.Model)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.Model, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.SeriNo)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.SeriNo, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.Tarih)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.TeslimEden)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.TeslimAlan)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.TeslimEdilenDepartman)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.TeslimEdilenDepartman, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.UrunDurum)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.UrunDurum, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.IMEI)
                </div>
                <div>
                    @Html.TextBoxFor(x => x.IMEI, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(x => x.Aciklama)
                </div>
                <div>
                    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Düzenle" class="btn btn-outline-warning" />
            </div>
        }
    </div>
</body>
</html>
